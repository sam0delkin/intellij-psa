<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.sam0delkin.intellijpsa</id>
    <name>Project Specific Autocomplete</name>
    <vendor>sam0delkin</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceImplementation="com.github.sam0delkin.intellijpsa.settings.Settings"/>

        <projectConfigurable
                parentId="tools"
                instance="com.github.sam0delkin.intellijpsa.settings.ProjectSettingsForm"
                id="com.github.sam0delkin.intellijpsa.settings.ProjectSettingsForm"
                displayName="Project Specific Autocomplete"
                nonDefaultProject="true"/>

        <projectService serviceImplementation="com.github.sam0delkin.intellijpsa.services.CompletionService"/>
        <completion.contributor
                language="any"
                implementationClass="com.github.sam0delkin.intellijpsa.completion.AnyCompletionContributor$Completion"/>
        <gotoDeclarationHandler implementation="com.github.sam0delkin.intellijpsa.completion.AnyCompletionContributor$GotoDeclaration"/>
        <notificationGroup id="PSA Notification"
                           displayType="BALLOON"/>
        <statusBarWidgetFactory id="psa.statusBar.widget_factory" implementation="com.github.sam0delkin.intellijpsa.statusBar.PsaStatusBarWidgetFactory" />
        <vfs.asyncListener implementation="com.github.sam0delkin.intellijpsa.fileListener.PsaFileListener" />
    </extensions>
    <actions>
        <group
                id="com.github.sam0delkin.intellijpsa.action.PsaTemplateActionGroup"
                class="com.github.sam0delkin.intellijpsa.action.PsaTemplateActionGroup"
                popup="true"
                text="PSA Templates"
                description="Project Specific Autocomplete templates returned by your completion script"
                icon="com.github.sam0delkin.intellijpsa.icons.Icons.PluginIcon">
            <add-to-group
                    group-id="NewGroup"
                    anchor="after"
                    relative-to-action="NewFile"
                    />
        </group>
    </actions>
</idea-plugin>
